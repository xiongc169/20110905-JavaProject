<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/wong_user?serverTimezone=UTC</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>

        <mapping class="org.web.domain.Account"/>
        <mapping class="org.web.domain.Admin"/>
        <mapping class="org.web.domain.Customer"/>
        <mapping class="org.web.domain.Menu"/>
        <mapping class="org.web.domain.Resource"/>
        <mapping class="org.web.domain.Role"/>
        <mapping class="org.web.domain.RoleMenu"/>
        <mapping class="org.web.domain.RoleResource"/>
        <mapping class="org.web.domain.UserRole"/>

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>